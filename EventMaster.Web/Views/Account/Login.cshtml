@model EventMaster.Web.Models.LoginRegisterViewModel
@{
    ViewData["Title"] = "Sign In / Register";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-11 col-xl-10">

            <div class="em-auth-card">
                <div class="row g-0">

                    <!-- LEFT: LOGIN -->
                    <div class="col-12 col-lg-6 em-auth-col em-auth-col-left">
                        <div class="em-auth-inner">
                            <h1 class="em-auth-title">Login</h1>
                            <p class="em-auth-subtitle">Enter your username/email and password.</p>

                            @if (!string.IsNullOrWhiteSpace(Model.Error))
                            {
                                <div class="alert alert-danger em-auth-alert">@Model.Error</div>
                            }

                            <form asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                                <div class="mb-3">
                                    <label class="form-label em-auth-label">Username or Email</label>
                                    <input name="LoginUsernameOrEmail"
                                           value="@Model.LoginUsernameOrEmail"
                                           class="form-control em-auth-input"
                                           placeholder="Enter username or email"
                                           required />
                                    <div class="invalid-feedback">Please enter your username or email.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label em-auth-label">Password</label>
                                    <input name="LoginPassword"
                                           type="password"
                                           class="form-control em-auth-input"
                                           placeholder="Enter password"
                                           required />
                                    <div class="invalid-feedback">Please enter your password.</div>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 em-auth-btn">
                                    Sign In
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- RIGHT: REGISTER -->
                    <div class="col-12 col-lg-6 em-auth-col em-auth-col-right">
                        <div class="em-auth-inner">
                            <h2 class="em-auth-title">Register</h2>
                            <p class="em-auth-subtitle">Create your account to book tickets.</p>

                            <form asp-controller="Account" asp-action="Register" method="post" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                                <div class="mb-3">
                                    <label class="form-label em-auth-label">Full Name</label>
                                    <input name="Name"
                                           value="@Model.Name"
                                           class="form-control em-auth-input"
                                           placeholder="First Last"
                                           required />
                                    <div class="invalid-feedback">Please enter your full name.</div>
                                </div>

                                <div class="row g-2">
                                    <div class="col-12 col-sm-4">
                                        <label class="form-label em-auth-label">Age</label>
                                        <input name="Age"
                                               value="@Model.Age"
                                               type="number"
                                               min="18"
                                               class="form-control em-auth-input"
                                               required />
                                        <div class="invalid-feedback">Age must be 18+.</div>
                                    </div>

                                    <div class="col-12 col-sm-8">
                                        <label class="form-label em-auth-label">Phone</label>
                                        <input name="Phone"
                                               value="@Model.Phone"
                                               class="form-control em-auth-input"
                                               placeholder="10-digit phone"
                                               required />
                                        <div class="invalid-feedback">Phone is required.</div>
                                    </div>
                                </div>

                                <div class="mt-3 mb-3">
                                    <label class="form-label em-auth-label">Email</label>
                                    <input name="Email"
                                           value="@Model.Email"
                                           type="email"
                                           class="form-control em-auth-input"
                                           placeholder="you@example.com"
                                           required />
                                    <div class="invalid-feedback">Please enter a valid email.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label em-auth-label">Username</label>
                                    <input name="Username"
                                           value="@Model.Username"
                                           class="form-control em-auth-input"
                                           placeholder="Choose a username"
                                           required />
                                    <div class="invalid-feedback">Please enter a username.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label em-auth-label">Password</label>
                                    <input name="Password"
                                           type="password"
                                           class="form-control em-auth-input"
                                           placeholder="Strong password"
                                           required />
                                    <div class="invalid-feedback">Please enter a password.</div>
                                </div>

                                <button type="submit" class="btn btn-outline-primary w-100 em-auth-btn-outline">
                                    Create Account
                                </button>
                            </form>

                            <div class="em-auth-footnote">
                                By continuing, you agree to EventMaster’s terms and policies.
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation UI
        (function () {
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}