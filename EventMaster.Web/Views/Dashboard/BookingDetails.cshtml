@model EventMaster.Web.Models.BookingDetailsViewModel
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container my-4">
    <a asp-action="Customer" class="btn btn-primary">&larr; Back to Dashboard</a>
    <br/>
    <div class="h4 fw-bold mt-3">
        <h1>Booking Details</h1>
    </div>

    <div class="card em-details-header mb-4">
        <div class="row g-0">
            <div class="col-12 col-lg-3">
                <img class="em-details-img" src="@Model.Image" alt="@Model.EventName" />
            </div>

            <div class="col-12 col-lg-9">
                <div class="card-body">
                    <h1 class="h4 fw-bold mt-2 mb-1">@Model.EventName</h1>
                    <div><strong>Status:</strong> @Model.Status</div>
                    <div><strong>Date & Time:</strong> @Model.DateTimeLine</div>
                    <div><strong>Venue:</strong> @Model.VenueLine</div>
                    <div><strong>Number of Tickets:</strong> @Model.NumberOfTickets</div>
                    <div><strong>Seats Selected:</strong> @Model.SeatsSelected</div>
                    <div><strong>Card:</strong> @Model.CardSummary</div>
                    <div><strong>Ticket Number:</strong> @Model.TicketNumber</div>
                    <div><strong>Total Paid:</strong> $@Model.TotalAmount.ToString("0.00")</div>

                    @if (Model.CanCancel)
                    {
                        <button class="btn btn-danger mt-3" type="button" data-bs-toggle="modal" data-bs-target="#cancelBookingModal">
                            Cancel Booking
                        </button>

                        <div class="modal fade" id="cancelBookingModal" tabindex="-1" aria-labelledby="cancelBookingModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2 class="modal-title fs-5" id="cancelBookingModalLabel">Confirm Cancellation</h2>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to cancel this booking? A 15% cancellation fee applies.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                                        <form asp-action="CancelBooking" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="bookingId" value="@Model.BookingId" />
                                            <button class="btn btn-danger" type="submit">Yes, Cancel Booking</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
