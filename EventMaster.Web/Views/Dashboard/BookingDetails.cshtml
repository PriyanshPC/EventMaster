@model EventMaster.Web.Models.BookingDetailsViewModel
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container my-4">
    <a asp-action="Customer" class="btn btn-primary">&larr; Back to Dashboard</a>
    <br/>
    <div class="h4 fw-bold mt-3">
        <h1>Booking Details</h1>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <div class="card em-details-header mb-4">
        <div class="row g-0">
            <div class="col-12 col-lg-3">
                <img class="em-details-img" src="@Model.Image" alt="@Model.EventName" />
            </div>

            <div class="col-12 col-lg-9">
                <div class="card-body">
                    <h1 class="h4 fw-bold mt-2 mb-1">@Model.EventName</h1>
                    <div><strong>Status:</strong> @Model.Status</div>
                    <div><strong>Date & Time:</strong> @Model.DateTimeLine</div>
                    <div><strong>Venue:</strong> @Model.VenueLine</div>
                    <div><strong>Number of Tickets:</strong> @Model.NumberOfTickets</div>
                    <div><strong>Seats Selected:</strong> @Model.SeatsSelected</div>
                    <div><strong>Card:</strong> @Model.CardSummary</div>
                    <div><strong>Ticket Number:</strong> @Model.TicketNumber</div>
                    <div><strong>Total Paid:</strong> $@Model.TotalAmount.ToString("0.00")</div>

                    @if (Model.CanCancel)
                    {
                        <form asp-action="CancelBooking" method="post" class="mt-3" onsubmit="return confirm('Are you sure you want to cancel this booking? A 15% cancellation fee applies.');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="bookingId" value="@Model.BookingId" />
                            <button class="btn btn-danger" type="submit">Cancel Booking</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
